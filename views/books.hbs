<h1>Books</h1>

{{#if books.length}}
<div class="content_book">
{{#each books}}
      <div class="card">
        <div class="card-image">
          <img src="{{img}}" title="{{title}}">
        </div>
        <div class="card-content">
          <span class="card-title">{{title}}</span>
          <p class="price">{{price}}</p>
        </div>
        <div class="card-action">
          <a href="#">Book details</a>
        </div>
      </div>
  {{/each}}
{{else}}
</div>
<b>Books empty</b>
{{/if}}